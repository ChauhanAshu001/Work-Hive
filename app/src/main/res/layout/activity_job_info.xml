<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Company Name and Job Role -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/bookmarkButton"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bookmark" />

        </LinearLayout>


        <TextView
            android:id="@+id/jobRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Role"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Job Details -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Job Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/jobType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full-time / Part-time"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Job Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/jobLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Salary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Application Deadline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Deadline"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/applicationDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline Date"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Experience Needed -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience Needed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/experienceNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Qualifications Needed -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualifications Needed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/qualificationsNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualifications Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Responsibilities -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsibilities"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/responsibilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsibilities Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Company Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/companyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Benefits -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benefits"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/benefits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benefits Details"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Apply Button -->
        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Now"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
